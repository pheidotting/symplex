    <bean id="nieuweTaakResponseDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg index="0" value="tb.rb.nieuweTaakResponseQueue"/>
    </bean>
    <bean id="nieuweTaakResponseTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="defaultDestination" ref="nieuweTaakResponseDestination"/>
    </bean>
    <bean id="nieuweTaakResponseSender"
          class="nl.lakedigital.djfc.messaging.sender.NieuweTaakResponseSender">
        <constructor-arg index="0" ref="nieuweTaakResponseTemplate"/>
    </bean>

