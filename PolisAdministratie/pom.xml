                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>/Users/patrickheidotting/Documents/DEV/Java/jetty/comm/
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${basedir}/src/main/resources/dev</directory>
                                            <includes>
