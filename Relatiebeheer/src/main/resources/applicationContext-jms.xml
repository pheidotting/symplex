    </bean>
    <bean id="opslaanEntiteitenRequestSender" class="nl.dias.messaging.sender.OpslaanEntiteitenRequestSender">
        <constructor-arg index="0" ref="opslaanEntiteitenRequestTemplate"/>
    </bean>

