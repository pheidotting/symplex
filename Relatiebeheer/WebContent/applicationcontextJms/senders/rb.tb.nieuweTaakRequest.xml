<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="nieuweTaakRequestDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg index="0" value="rb.tb.nieuweTaakRequestQueue"/>
    </bean>
    <bean id="nieuweTaakRequestTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="defaultDestination" ref="nieuweTaakRequestDestination"/>
    </bean>
    <bean id="nieuweTaakRequestSender" class="nl.dias.messaging.sender.NieuweTaakRequestSender">
        <constructor-arg index="0" ref="nieuweTaakRequestTemplate"/>
    </bean>
</beans>